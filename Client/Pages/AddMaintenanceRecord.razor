@inject Microsoft.Extensions.Localization.IStringLocalizer<AddMaintenanceRecord> L
@page "/add-maintenance-record"
@attribute [Authorize]

<PageTitle>Add MaintenanceRecord</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save MaintenanceRecord</RadzenAlert>
        <RadzenTemplateForm TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Data="@maintenanceRecord" Visible="@(maintenanceRecord != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Fixed Asset" Component="FixedAsset" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@fixedAssetsForAssetId" TextProperty="AssetTag" ValueProperty="AssetId" AllowClear=true
                         Placeholder="Choose FixedAsset" style="display: block; width: 100%" @bind-Value="@maintenanceRecord.AssetId" Name="AssetId"
                        SelectedValue=@fixedAssetsForAssetIdValue Count=@fixedAssetsForAssetIdCount LoadData=@fixedAssetsForAssetIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Maintenance Date" Component="MaintenanceDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@maintenanceRecord.MaintenanceDate" Name="MaintenanceDate" />
                    <RadzenRequiredValidator Component="MaintenanceDate" Text="MaintenanceDate is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Description" Component="Description" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@maintenanceRecord.Description" Name="Description" />
                    <RadzenRequiredValidator Component="Description" Text="Description is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Cost" Component="Cost" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@maintenanceRecord.Cost" Name="Cost" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Performed By" Component="PerformedBy" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@maintenanceRecord.PerformedBy" Name="PerformedBy" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Next Maintenance Date" Component="NextMaintenanceDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@maintenanceRecord.NextMaintenanceDate" Name="NextMaintenanceDate" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Created At" Component="CreatedAt" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@maintenanceRecord.CreatedAt" Name="CreatedAt" AllowInput="false" ShowButton="false" ShowDays="false" ReadOnly="true" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Updated At" Component="UpdatedAt" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@maintenanceRecord.UpdatedAt" Name="UpdatedAt" AllowInput="false" ShowButton="false" ShowTimeOkButton="false" ShowDays="false" ReadOnly="true" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

