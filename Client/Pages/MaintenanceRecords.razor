@page "/maintenance-records"

<PageTitle>MaintenanceRecords</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="MaintenanceRecords" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" aria-label="Search by all string columns" />
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@maintenanceRecords" LoadData="@Grid0LoadData" Count="@count" TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" RowDoubleClick="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="MaintenanceId" Title="Maintenance Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="FixedAsset.AssetTag" Title="Fixed Asset">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="MaintenanceDate" Title="Maintenance Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="Description" Title="Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="Cost" Title="Cost">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="PerformedBy" Title="Performed By">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="NextMaintenanceDate" Title="Next Maintenance Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="CreatedAt" Title="Created At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Property="UpdatedAt" Title="Updated At">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="ActivosFiljos.Server.Models.FixedAssetsDB.MaintenanceRecord" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="maintenanceRecord">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, maintenanceRecord)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
