@inject Microsoft.Extensions.Localization.IStringLocalizer<EditFixedAsset> L
@page "/edit-fixed-asset"

<PageTitle>Edit FixedAsset</PageTitle>
<RadzenRow>
    <RadzenColumn SizeMD="9">
    <RadzenLabel style="font-weight: bold" Text="Item no longer available." Visible="@(!canEdit)" />
    </RadzenColumn>
    <RadzenColumn SizeMD="3">
    <RadzenButton ButtonStyle="ButtonStyle.Secondary" style="margin-bottom: 20px" Text="Close" Visible="@(!canEdit)" Click="@CancelButtonClick" />
    </RadzenColumn>
</RadzenRow>
<RadzenRow>
    <RadzenColumn SizeMD="9">
    <RadzenLabel style="font-weight: bold" Text="Another user has made conflicting changes to one or more of the fields you have modified. Please reload." Visible="@hasChanges" />
    </RadzenColumn>
    <RadzenColumn SizeMD="3">
    <RadzenButton ButtonStyle="ButtonStyle.Secondary" Icon="autorenew" style="margin-bottom: 20px" Text="Reload" Visible="@hasChanges" Click="@ReloadButtonClick" />
    </RadzenColumn>
</RadzenRow>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save FixedAsset</RadzenAlert>
        <RadzenTemplateForm TItem="ActivosFiljos.Server.Models.FixedAssetsDB.FixedAsset" Data="@fixedAsset" Visible="@(fixedAsset != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Asset Tag" Component="AssetTag" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@fixedAsset.AssetTag" Name="AssetTag" />
                    <RadzenRequiredValidator Component="AssetTag" Text="AssetTag is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Asset Name" Component="AssetName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@fixedAsset.AssetName" Name="AssetName" />
                    <RadzenRequiredValidator Component="AssetName" Text="AssetName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Asset Category" Component="AssetCategory" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@assetCategoriesForCategoryId" TextProperty="CategoryName" ValueProperty="CategoryId" AllowClear=true
                         Placeholder="Choose AssetCategory" style="display: block; width: 100%" @bind-Value="@fixedAsset.CategoryId" Name="CategoryId"
                        SelectedValue=@assetCategoriesForCategoryIdValue Count=@assetCategoriesForCategoryIdCount LoadData=@assetCategoriesForCategoryIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Location" Component="Location" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@locationsForLocationId" TextProperty="LocationName" ValueProperty="LocationId" AllowClear=true
                         Placeholder="Choose Location" style="display: block; width: 100%" @bind-Value="@fixedAsset.LocationId" Name="LocationId"
                        SelectedValue=@locationsForLocationIdValue Count=@locationsForLocationIdCount LoadData=@locationsForLocationIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="User" Component="User" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@usersForUserId" TextProperty="FirstName" ValueProperty="UserId" AllowClear=true
                         Placeholder="Choose User" style="display: block; width: 100%" @bind-Value="@fixedAsset.UserId" Name="UserId"
                        SelectedValue=@usersForUserIdValue Count=@usersForUserIdCount LoadData=@usersForUserIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Purchase Date" Component="PurchaseDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@fixedAsset.PurchaseDate" Name="PurchaseDate" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Purchase Cost" Component="PurchaseCost" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@fixedAsset.PurchaseCost" Name="PurchaseCost" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Manufacturer" Component="Manufacturer" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@fixedAsset.Manufacturer" Name="Manufacturer" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Model" Component="Model" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@fixedAsset.Model" Name="Model" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Serial Number" Component="SerialNumber" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@fixedAsset.SerialNumber" Name="SerialNumber" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Status" Component="Status" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@statusesForStatusId" TextProperty="StatusName" ValueProperty="StatusId" AllowClear=true
                         Placeholder="Choose Status" style="display: block; width: 100%" @bind-Value="@fixedAsset.StatusId" Name="StatusId"
                        SelectedValue=@statusesForStatusIdValue Count=@statusesForStatusIdCount LoadData=@statusesForStatusIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Warranty Expiry" Component="WarrantyExpiry" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@fixedAsset.WarrantyExpiry" Name="WarrantyExpiry" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Created At" Component="CreatedAt" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@fixedAsset.CreatedAt" Name="CreatedAt" AllowInput="false" ShowTimeOkButton="false" ReadOnly="true" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Updated At" Component="UpdatedAt" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@fixedAsset.UpdatedAt" Name="UpdatedAt" ReadOnly="true" ShowDays="false" ShowButton="false" AllowInput="false" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

