@inject Microsoft.Extensions.Localization.IStringLocalizer<AddAssetAttribute> L
@page "/add-asset-attribute"
@attribute [Authorize]

<PageTitle>Add AssetAttribute</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save AssetAttribute</RadzenAlert>
        <RadzenTemplateForm TItem="ActivosFiljos.Server.Models.FixedAssetsDB.AssetAttribute" Data="@assetAttribute" Visible="@(assetAttribute != null && canEdit)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Attribute Name" Component="AttributeName" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@assetAttribute.AttributeName" Name="AttributeName" />
                    <RadzenRequiredValidator Component="AttributeName" Text="AttributeName is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Asset Category" Component="AssetCategory" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@assetCategoriesForCategoryId" TextProperty="CategoryName" ValueProperty="CategoryId" AllowClear=true
                         Placeholder="Choose AssetCategory" style="display: block; width: 100%" @bind-Value="@assetAttribute.CategoryId" Name="CategoryId"
                        SelectedValue=@assetCategoriesForCategoryIdValue Count=@assetCategoriesForCategoryIdCount LoadData=@assetCategoriesForCategoryIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Data Type" Component="DataType" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@assetAttribute.DataType" Name="DataType" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

